      <!--android:layout_width="@dimen/navigation_drawer_width"-->
      <!--android:layout_height="match_parent"-->
      <!--android:layout_gravity="start"-->
      <!--android:name="NavigationDrawerFragment"-->
      <!--tools:layout="@layout/fragment_navigation_drawer" />-->

</FrameLayout>
